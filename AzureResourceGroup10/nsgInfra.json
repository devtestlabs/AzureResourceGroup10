{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webNsgName": {
      "type": "string",
      "metadata": {
        "description": "Web NSG Name"
      }
    },
    "appNsgName": {
      "type": "string",
      "metadata": {
        "description": "App NSG Name"
      }
    },
    "dbNsgName": {
      "type": "string",
      "metadata": {
        "description": "DB NSG Name"
      }
    },
    "adNsgName": {
      "type": "string",
      "metadata": {
        "description": "AD NSG Name"
      }
    },
    "edgeNsgName": {
      "type": "string",
      "metadata": {
        "description": "Edge NSG Name"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "NSG Location"
      }
    }
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2017-06-01",
      "location": "[parameters('location')]",
      "name": "[parameters('webNsgName')]",
      "properties": {}
    },
    {
      "apiVersion": "2017-06-01",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('appNsgName')]",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "apiVersion": "2017-06-01",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('dbNsgName')]",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "apiVersion": "2017-06-01",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('adNsgName')]",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "apiVersion": "2017-06-01",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('edgeNsgName')]",
      "location": "[parameters('location')]",
      "properties": {}
    }

  ],

  "outputs": {
    "webNsgRef": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/networkSecuirtyGroups/',parameters('webNsgName'))]"
    },
    "testRef": {
      "type": "string",
      "value": "[reference(concat('Microsoft.Network/networkSecuirtyGroups/',parameters('webNsgName')))]"
    }
  }
}
